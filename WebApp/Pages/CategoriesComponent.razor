@page "/categories"

@inject NavigationManager NavigationManager
@inject IViewCategoriesUseCase ViewCategoriesUseCase
<h3>Manage Categories</h3>


@if (categories != null)
{
    <table class="table">
        <thead>
            <tr>

                <th>
                    Name
                </th>
                <th>
                    DESCRIPTION
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>


                </tr>
            }
        </tbody>


    </table>
}
<button type="button" @onclick="OnClickAddCategory" class="btn-primary">Add Category</button>
<button type="button" @onclick="OnClickEditCategory" class="btn-primary">Edit Category</button>
@code {

    private List<Category> categories;

    protected override void OnInitialized()
    {
        base.OnInitialized();


        categories = ViewCategoriesUseCase.Execute()?.ToList();

    }

    private void OnClickAddCategory()
    {
        NavigationManager.NavigateTo("/addCategory");
    }
    private void OnClickEditCategory()
    {
        NavigationManager.NavigateTo("/addCategory");
    }

}
